<div class="row auth">
  <div class="large-6 large-centered columns">
    <h1 class="header">Sign in</h1>

    <div class="panel">
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class:"custom"}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :required => false, :autofocus => true %>
          <%= f.input :password, :required => false %>
          <%= f.input :remember_me, :as => :boolean, wrapper_html: {class: "inline-block"} if devise_mapping.rememberable? %>
          <div class="other_info inline-block right">
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          </div>
        </div>
        <hr>
        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: "submit" %>
        </div>
      <% end %>
    </div>
    <div class="other_info">
      <%= link_to "Sign up", new_registration_path(resource_name) %>
    </div>
  </div>
</div>