<h1>Edit Company</h1>

<%= simple_form_for(@profile, as: 'profile', url: profile_path) do |f| %>
  <div class="form-inputs">
    <%= f.input :company_name %>
    <%= f.input :website %>
    <%= f.input :other_contact %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%= f.input :vision %>
    <%= f.association :business_types, as: :check_boxes %>
    <%= f.association :team_size, as: :radio_buttons %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>