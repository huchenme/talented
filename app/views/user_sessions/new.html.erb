<div class="row auth">
  <div class="large-6 large-centered columns">
    <h1 class="header">Sign in</h1>

    <div class="panel">
      <%= simple_form_for(:session, :url => login_path, html: {class:"custom", method: :post}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :required => false, :autofocus => true %>
          <%= f.input :password, :required => false %>
          <%= f.input :remember, :as => :boolean, wrapper_html: {class: "inline-block"} %>
          <div class="other_info inline-block right">
            <%= link_to "Forgot your password?", new_password_reset_path %>
          </div>
        </div>
        <hr>
        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: "submit" %>
        </div>
      <% end %>
    </div>
    <div class="other_info">
      <%= link_to "Sign up", signup_path %>
    </div>
  </div>
</div>